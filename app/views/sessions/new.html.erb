<h1>Log In</h1>

<%= form_tag sessions_path do %>

<div class ='form-group'>
	<%= label_tag :username %>
	<%= text_field_tag :username, params[:username], class: 'form_control' %>
</div>
	
<div class ='form-group'>
	<%= label_tag :password %>
	<%= password_field_tag :password, params[:password], class: 'form_control' %>
</div>

<%= submit_tag 'Log In', class: 'btn btn-primary'  %>
<% end %>